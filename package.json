{
  "name": "voyc",
  "version": "1.0.0",
  "description": "Fast, minimal, GNOME-native voice dictation app for Linux Wayland",
  "type": "module",
  "scripts": {
    "generate:types": "npx @ts-for-gir/cli generate Gtk-4.0 Adw-1 Gio-2.0 GLib-2.0 GObject-2.0 Gst-1.0 --outdir ./types",
    "build": "node scripts/build.js",
    "dev": "npm run build && gjs dist/main.js",
    "clean": "rm -rf dist/*"
  },
  "keywords": [
    "voice-dictation",
    "gtk3",
    "gjs",
    "wayland",
    "speech-to-text"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@ts-for-gir/cli": "^4.0.0-beta.38",
    "@ts-for-gir/generator-typescript": "^4.0.0-beta.38",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@girs/gjs": "^4.0.0-beta.38",
    "@girs/gtk-4.0": "^4.14.0-4.0.0-beta.38",
    "@girs/adw-1": "^1.6.0-4.0.0-beta.38",
    "@girs/soup-3.0": "^3.0.0-4.0.0-beta.38",
    "@girs/gdk-4.0": "^4.0.0-4.0.0-beta.38",
    "@girs/gio-2.0": "^2.86.0-4.0.0-beta.38",
    "@girs/glib-2.0": "^2.86.0-4.0.0-beta.38",
    "@girs/gobject-2.0": "^2.86.0-4.0.0-beta.38",
    "@girs/gst-1.0": "^1.26.6-4.0.0-beta.38"
  }
}
