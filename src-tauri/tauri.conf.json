{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Voyc",
  "version": "2026.2.10",
  "identifier": "com.voyc.dictation",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Voyc",
        "width": 680,
        "height": 570,
        "minWidth": 680,
        "minHeight": 570,
        "resizable": true,
        "maximizable": true,
        "decorations": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**"],
          "requireLiteralLeadingDot": false
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "resources": ["resources/**/*", "icons/**/*"],
    "license": "MIT",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libc6",
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ],
        "section": "sound",
        "priority": "optional",
        "desktopTemplate": "../voyc.desktop"
      },
      "rpm": {
        "compression": {
          "type": "none"
        },
        "postInstallScript": "../scripts/rpm-postinstall.sh",
        "postRemoveScript": "../scripts/rpm-postremove.sh"
      },
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDAzMzdEMDMyMUQ4OEU5MkEKUldRcTZZZ2RNdEEzQXgzUlFRSk1abXNIbi94aWh1Szh3alRON0VYZnArQjlLSmdFczdBdVRNbm8K",
      "endpoints": [
        "https://github.com/kryptobaseddev/voyc/releases/latest/download/latest.json"
      ]
    }
  }
}
